pipeline {
    agent any
    options {
        // Timeout counter starts AFTER agent is allocated
        timeout(time: 1, unit: 'SECONDS')
    }
    stages {
        stage('build') {
            steps {
                echo 'build'
            }
        }
    }

 stages {
        stage('Test') {
            steps {
                echo 'test'
            }
        }
    }
 stages {
        stage('deploy') {
            steps {
                echo 'deploy'
            }
        }
    }
}
